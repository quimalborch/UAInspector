<Application x:Class="UAInspector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UAInspector"
             xmlns:helpers="clr-namespace:UAInspector.Helpers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
          <ResourceDictionary.MergedDictionaries>
   <!-- Theme will be loaded dynamically here -->
   <ResourceDictionary Source="Resources/DarkTheme.xaml"/>
     <!-- Control Styles -->
       <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
     <!-- Converters -->
            <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
         <helpers:BoolToRWConverter x:Key="BoolToRWConverter"/>
        </ResourceDictionary>
  </Application.Resources>
</Application>
